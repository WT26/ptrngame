<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="wt.ptrngame.levelOne"
    android:id="@+id/content"
    android:background="#dcfdff"
    >

    <Button
        android:id="@+id/angry_btn"

        android:text="Back"
        android:textColor="#116d73"
        android:textSize="18sp"

        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/backbutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="BackButton"/>


    <ToggleButton

        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/chkState"
        android:background="@drawable/toggle_selector"
        android:textOff=""
        android:textOn=""
        android:checked="false"
        android:layout_alignTop="@+id/toggleButton"
        android:layout_toRightOf="@+id/textView16"
        android:layout_toEndOf="@+id/textView16" />

    <ToggleButton

        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/chkState2"
        android:background="@drawable/toggle_selector"
        android:textOff=""
        android:textOn=""
        android:layout_alignTop="@+id/chkState"
        android:layout_toRightOf="@+id/textView14"
        android:layout_toEndOf="@+id/textView14" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

    <TextView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/chkState"
        android:layout_toEndOf="@+id/chkState" />

    <TextView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/chkState2"
        android:layout_toEndOf="@+id/chkState2" />

    <ToggleButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/toggleButton"
        android:background="@drawable/toggle_selector"
        android:textOff=""
        android:textOn=""
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView15"
        android:layout_toEndOf="@+id/textView15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView16"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="           " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#116d73"
        android:text="Level - 1"
        android:id="@+id/textView17"
        android:layout_marginBottom="69dp"
        android:textSize="35dp"
        android:layout_above="@+id/chkState"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#116d73"
        android:text="Just check the all buttons"
        android:id="@+id/textView18"
        android:layout_marginBottom="69dp"
        android:textSize="26dp"
        android:layout_above="@+id/adView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button4"

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/retrybutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
