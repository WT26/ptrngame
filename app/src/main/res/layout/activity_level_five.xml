<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="wt.ptrngame.levelFive"
    android:id="@+id/content"
    android:background="#dcfdff"
    >

    <Button
        android:id="@+id/angry_btn"

        android:text="Back"
        android:textColor="#116d73"
        android:textSize="18sp"

        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/backbutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="BackButton"/>


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView16"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="           " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#116d73"
        android:text="Level - 5"
        android:id="@+id/textView17"
        android:textSize="35dp"
        android:layout_alignBottom="@+id/textView24"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_below="@+id/textView25"
        android:layout_toRightOf="@+id/textView16"
        android:layout_toEndOf="@+id/textView16">

        <ToggleButton

            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/chkState"
            android:background="@drawable/toggle_selector"
            android:textOff=""
            android:textOn=""
            android:checked="false"
            android:layout_alignTop="@+id/button4"
            android:layout_toRightOf="@+id/button4"
            android:layout_toEndOf="@+id/button4"
            android:layout_row="0"
            android:layout_column="0" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_row="0"
            android:layout_column="1" />

        <ToggleButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/toggleButton2"
            android:background="@drawable/toggle_selector"
            android:textOff=""
            android:textOn=""
            android:checked="false"
            android:layout_below="@+id/chkState"
            android:layout_centerHorizontal="true"
            android:layout_row="0"
            android:layout_column="2" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_row="1"
            android:layout_column="0" />

        <ToggleButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/toggleButton3"
            android:background="@drawable/toggle_selector"
            android:textOff=""
            android:textOn=""
            android:layout_below="@+id/button4"
            android:layout_alignLeft="@+id/button4"
            android:layout_alignStart="@+id/button4"
            android:layout_row="1"
            android:layout_column="1" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_row="1"
            android:layout_column="2" />

        <ToggleButton

            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button4"
            android:background="@drawable/toggle_selector"
            android:textOff=""
            android:textOn=""
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/angry_btn"
            android:layout_toEndOf="@+id/angry_btn"
            android:layout_row="2"
            android:layout_column="0" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_row="2"
            android:layout_column="1" />

        <ToggleButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/toggleButton"
            android:background="@drawable/toggle_selector"
            android:textOff=""
            android:textOn=""
            android:layout_below="@+id/button4"
            android:layout_alignLeft="@+id/button4"
            android:layout_alignStart="@+id/button4"
            android:layout_row="2"
            android:layout_column="2" />
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\n\n\n\n\n\n\"
        android:id="@+id/textView24"
        android:layout_below="@+id/angry_btn"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView25"
        android:layout_below="@+id/textView17"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/retrybutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
