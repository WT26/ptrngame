<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#dcfdff"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/angry_btn"

            android:text="PLAY"
            android:textColor="#116d73"
            android:textSize="30sp"

            android:layout_width="250dp"
            android:layout_height="73dp"
            android:background="@drawable/playbutton"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:onClick="levelMenu"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/ptrnlogo"

        android:layout_alignParentTop="true"
        android:layout_above="@+id/textView12"
        android:layout_alignRight="@+id/angry_btn"
        android:layout_alignEnd="@+id/angry_btn"
        android:layout_toRightOf="@+id/textView13"
        android:layout_toEndOf="@+id/textView13" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:id="@+id/textView12"
        android:layout_above="@+id/angry_btn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button"
        android:text="info"
        android:textColor="#116d73"
        android:textSize="19dp"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:background="@drawable/playbutton"
        android:onClick="levelMenu"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView19"
        android:layout_below="@+id/angry_btn"
        android:layout_centerHorizontal="true" />

    <ToggleButton

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/soundtogl"
        android:background="@drawable/sound_toggle"
        android:textOff=""
        android:textOn=""
        android:layout_below="@+id/textView26"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignEnd="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView26"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/chkState"
        android:layout_alignStart="@+id/chkState" />

</RelativeLayout>


