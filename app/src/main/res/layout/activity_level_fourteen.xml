<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="wt.ptrngame.levelFourteen"
    android:id="@+id/content"
    android:background="#ffcfa5"
    >

    <Button
        android:id="@+id/angry_btn"

        android:text="Back"
        android:textColor="#be6c22"
        android:textSize="18sp"

        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/backbuttonorange"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="BackButton"/>


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView16"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="              " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#be6c22"
        android:text="Level - 14"
        android:id="@+id/textView17"
        android:textSize="35dp"
        android:layout_alignBottom="@+id/textView24"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="10"
        android:rowCount="9"
        android:id="@+id/gridLayout"
        android:layout_alignTop="@+id/textView17"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView32">

        <Space
            android:layout_width="54dp"
            android:layout_height="55dp"
            android:layout_row="0"
            android:layout_column="1" />

        <Space
            android:layout_width="82dp"
            android:layout_height="55dp"
            android:layout_row="1"
            android:layout_column="0" />

        <ToggleButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/button2"
            android:background="@drawable/toggleselector_orange"
            android:textOff=""
            android:textOn=""
            android:checked="false"
            android:layout_below="@+id/chkState"
            android:layout_centerHorizontal="true"
            android:layout_row="1"
            android:layout_column="1" />

        <ToggleButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/button1"
            android:background="@drawable/toggleselector_orange"
            android:textOff=""
            android:textOn=""
            android:checked="false"
            android:layout_below="@+id/chkState"
            android:layout_centerHorizontal="true"
            android:layout_row="1"
            android:layout_column="3" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_row="2"
            android:layout_column="1" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_row="3"
            android:layout_column="2" />

        <ToggleButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/button3"
            android:background="@drawable/toggleselector_orange"
            android:textOff=""
            android:textOn=""
            android:checked="false"
            android:layout_below="@+id/chkState"
            android:layout_centerHorizontal="true"
            android:layout_row="3"
            android:layout_column="3" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_row="3"
            android:layout_column="4" />

        <ToggleButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/toggleButton9"
            android:background="@drawable/toggleselector_orange"
            android:textOff=""
            android:textOn=""
            android:checked="false"
            android:layout_below="@+id/chkState"
            android:layout_centerHorizontal="true"
            android:layout_row="3"
            android:layout_column="5" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_row="4"
            android:layout_column="5" />

        <ToggleButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/toggleButton10"
            android:background="@drawable/toggleselector_orange"
            android:textOff=""
            android:textOn=""
            android:checked="false"
            android:layout_below="@+id/chkState"
            android:layout_centerHorizontal="true"
            android:layout_row="5"
            android:layout_column="3" />

        <ToggleButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/toggleButton11"
            android:background="@drawable/toggleselector_orange"
            android:textOff=""
            android:textOn=""
            android:checked="false"
            android:layout_below="@+id/chkState"
            android:layout_centerHorizontal="true"
            android:layout_row="5"
            android:layout_column="5" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\n\n\n\n\n\n"
        android:id="@+id/textView24"
        android:layout_below="@+id/angry_btn"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView25"
        android:layout_below="@+id/textView17"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/retrybuttonorange"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView32"
        android:layout_above="@+id/adView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:textColor="#be6c22" />

    <Button
        android:id="@+id/button8"
        android:text="MAKE PTRN"
        android:textColor="#be6c22"
        android:textSize="18sp"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/backbuttonorange"
        android:layout_alignRight="@+id/textView17"
        android:layout_alignEnd="@+id/textView17"
        android:layout_toRightOf="@+id/textView24"
        android:layout_toEndOf="@+id/textView24"
        android:layout_alignBottom="@+id/textView32" />

    <Button
        android:id="@+id/button9"
        android:text="Enjoying it?    Click to Rate."
        android:textColor="#be6c22"
        android:textSize="15dp"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/backbuttonorange"
        android:layout_toRightOf="@+id/textView24"
        android:layout_alignRight="@+id/button8"
        android:layout_alignEnd="@+id/button8"
        android:layout_alignBottom="@+id/adView"
        android:layout_below="@+id/textView32" />

</RelativeLayout>
